<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/select_contact"
        android:layout_width="174dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:text="Select contact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <EditText
        android:id="@+id/no_of_calls"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginEnd="288dp"
        android:autofillHints="No of Calls"
        android:inputType="number"
        android:text="10"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_call"
        app:layout_constraintTop_toBottomOf="@+id/no_of_calls_label"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/no_of_calls_label"
        android:layout_width="128dp"
        android:layout_height="22dp"
        android:labelFor="@id/no_of_calls"
        android:text="No of Calls"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/no_of_calls"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="@+id/no_of_calls"
        app:layout_constraintTop_toBottomOf="@+id/select_contact"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/current_call_number"
        android:layout_width="191dp"
        android:layout_height="37dp"
        android:labelFor="@id/no_of_calls"
        android:text="Current call number"
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_contact"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_call"
        android:layout_width="304dp"
        android:layout_height="64dp"
        android:backgroundTint="#70a0ff"
        android:clickable="false"
        android:text="Call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_of_calls"
        app:layout_constraintVertical_bias="0.087" />

    <Button
        android:id="@+id/stop_call"
        android:layout_width="304dp"
        android:layout_height="64dp"
        android:backgroundTint="#a8ffbf"
        android:text="Stop Calling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_call"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>